 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="creditmemo_totals" class="Digitalriver\DrPay\Block\Sales\Order\Creditmemo\Totals">
            <block class="Magento\Tax\Block\Sales\Order\Tax" name="tax" template="Digitalriver_DrPay::order/tax.phtml"/>
        </referenceBlock>
    </body>
</page>
