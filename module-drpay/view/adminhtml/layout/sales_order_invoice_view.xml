<?xml version="1.0"?>
<!--
/**
 * @category Digitalriver
 * @package  Digitalriver_DrPay
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="invoice_totals">
            <block class="Magento\Sales\Block\Adminhtml\Order\Totals\Item" name="duty_fee_ior_tax" template="Digitalriver_DrPay::order/totals/duty_fee_ior_tax.phtml">
                <action method="setAfterCondition">
                    <argument name="param" xsi:type="string">tax</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceBlock name="invoice_items">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Digitalriver_DrPay::order/invoice/view/items.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="invoice_items.default">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Digitalriver_DrPay::order/invoice/view/items/renderer/default.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="invoice_items.bundle">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Digitalriver_DrPay::order/invoice/view/items/bundle_renderer.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
